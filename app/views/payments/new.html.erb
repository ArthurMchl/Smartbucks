<div class="container-recap">

  <h3 class="title-recap">Récapitulatif de votre commande</h3>
  <div class="voucher-publish-grid text-recap text-center">
    <div class="ml-3 d-flex justify-content-center">
      <div class="rounded-cart">
        <i class="fas fa-shopping-cart text-ico text-white"></i>
      </div>
    </div>
    <div class="d-flex justify-content-start align-items-center">
      <%= @order.voucher.brand.name %>
    </div>
    <div class="ml-3 d-flex justify-content-center">
      <div class="rounded-cart">
        <i class="fas fa-calendar-times text-ico text-white"></i>
      </div>
    </div>
    <div class="d-flex justify-content-start align-items-center">
      <%= parse_date_fr(@order.voucher.end_date) %>
    </div>
    <div class="ml-3 d-flex justify-content-center">
      <div class="rounded-cart">
        <i class="fas fa-dollar-sign text-ico text-white"></i>
      </div>
    </div>
    <div class="d-flex justify-content-start align-items-center"><%= @order.amount %> €</div>
  </div>
  <div class="d-flex mt-4 justify-content-center">
    <div id="pay" class="button button-navigation">
      Payer
    </div>
  </div>
</div>


<script src="https://js.stripe.com/v3/"></script>
<script>
  const paymentButton = document.getElementById('pay');
  paymentButton.addEventListener('click', () => {
  const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
  stripe.redirectToCheckout({
    sessionId: '<%= @order.checkout_session_id %>'
  });
});

</script>



