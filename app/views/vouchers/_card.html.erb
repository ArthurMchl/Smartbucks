<%= link_to voucher_path(voucher) do %>
<div class="card-voucher">

  <div class="brand" style="background-color: <%= voucher.brand.color %>">
    <div class="logo" style="background-image: url(<%= voucher.brand.logo %>)">

    </div>
  </div>

  <div class="details">
    <div class="category">
      <%= voucher.category %>
    </div>

    <div class="numbers">
      <div class="value">
        <%= voucher.value%> €
      </div>

      <div class="price">
        <%= voucher.price%> €
      </div>
    </div>

    <div class="date">
      <div class="far fa-clock mt-1" style="font-weight: 600">
      </div>
      <div id="voucher-date"><%= parse_date_fr(voucher.end_date) %>
      </div>
    </div>
  </div>

</div>
<% end %>
