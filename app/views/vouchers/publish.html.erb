<div class="container-recap">

  <h3 class="title">Récapitulatif</h3>
  <div class="voucher-publish-grid text-recap text-center">
    <div><i class="fas fa-shopping-cart text-ico"></i></div>
    <div><%= @voucher.brand.name %></div>
    <div><i class="fas fa-calendar-times text-ico"></i> </div>
    <div><%= parse_date_fr(@voucher.end_date) %></div>
    <div><i class="fas fa-dollar-sign text-ico"></i> </div>
    <div><%= @voucher.price %> €</div>
    <div><%= image_tag("logo_smartbucks.png",size: "100x40" )%></div>
    <div>Gratuit</div>
  </div>

  <div class="d-flex mt-4 justify-content-center">
    <%= link_to "Modifier", edit_voucher_path(@voucher), class:"button button-navigation" %>
    <%= link_to 'Publier', voucher_path(@voucher, display_confirmation_message: true), class:"button button-navigation"%>
  </div>
</div>
